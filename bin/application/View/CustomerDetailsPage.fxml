            <Font size="20.0" />
         </font></Button>
      <Button layoutX="53.0" layoutY="428.0" mnemonicParsing="false" onAction="#goBack" prefHeight="44.0" prefWidth="107.0" text="Log Out">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <MenuButton fx:id="i" layoutX="91.0" layoutY="199.0" mnemonicParsing="false" onAction="#getGender" prefHeight="30.0" prefWidth="82.0">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#setMale" text="Male" />
          <MenuItem mnemonicParsing="false" onAction="#setFemale" text="Female" />
            <MenuItem mnemonicParsing="false" onAction="#setOther" text="Other" />
        </items>
      </MenuButton>
      <Button layoutX="206.0" layoutY="428.0" mnemonicParsing="false" onAction="#skip" prefHeight="44.0" prefWidth="89.0" text="Skip">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
