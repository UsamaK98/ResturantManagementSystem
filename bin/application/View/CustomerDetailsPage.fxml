   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="25.0" layoutY="27.0" prefHeight="44.0" prefWidth="450.0" text="Enter Customer Details" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font></Label>
      <Label layoutX="40.0" layoutY="94.0" prefHeight="20.0" prefWidth="51.0" text="Name:" />
      <Label layoutX="40.0" layoutY="148.0" text="Age:" />
      <Label layoutX="34.0" layoutY="204.0" prefHeight="20.0" prefWidth="51.0" text="Gender:" />
      <Label layoutX="34.0" layoutY="257.0" prefHeight="30.0" prefWidth="119.0" text="Contact Number:" />
      <Label layoutX="34.0" layoutY="312.0" prefHeight="30.0" prefWidth="51.0" text="Email:" />
      <Label layoutX="36.0" layoutY="374.0" prefHeight="20.0" prefWidth="60.0" text="Address:" />
      <TextField fx:id="name" layoutX="91.0" layoutY="89.0" />
      <TextField fx:id="age" layoutX="91.0" layoutY="143.0" />
      <TextField fx:id="contact" layoutX="152.0" layoutY="257.0" />
      <TextField fx:id="email" layoutX="106.0" layoutY="312.0" />
      <TextField fx:id="address" layoutX="106.0" layoutY="369.0" />
